body{
	background-color: #000;
	margin: 0;
	width: 100%;
	height: 100%;
	display:block;
	position:absolute;
	left:0px;
	top:0px;
	overflow:hidden;
}
#top_view {
	width: 100%;
	height: 10%;
	background-color: #000;
}
#draw_view{
	top:90px;
	width: 90vw;
	height: 90vw;
	margin:0 auto;
	background-color: #fff;
}
#bottom_view{
	position: absolute;
	bottom: 0;
	width: 100vw;
	height: 8vh;
	margin: 0;
	background-color: #232323;
}
.bottom_btn{
	float: left;
	width: 20%;
	height: 100%;
	text-align: center;
	background-color: #232323
}
.bottom_btn:hover{
	background-color: #454545;
}
.img_btn{
	position: relative;
	width: auto;
	height: auto;
	max-height: 70%;
	top: 15%;
	line-height: 70%;
}